{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "type": "shell",
            "group": "test",
            "command": "$DebugPreference = 'Continue'; Invoke-Pester -Script test/pester -PesterOption @{ IncludeVSCodeMarker = $true }",
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "Invoke-Build Clean",
            "problemMatcher": []
        },
        {
            "label": "restore",
            "type": "shell",
            "command": "Invoke-Build Restore",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "group": "build",
            "command": "Invoke-Build PublishStandard",
            "problemMatcher": []
        },
        {
            "label": "update-help",
            "type": "shell",
            "command": "Invoke-Build UpdateHelp",
            "problemMatcher": []
        }
    ]
}