{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Update GIT submodules",
            "type": "shell",
            "command": "git submodule update --remote",
            "problemMatcher": []
        },
        {
            "label": "Run tests",
            "type": "shell",
            "group": "test",
            "command": "Invoke-Pester -Script test/pester -PesterOption @{IncludeVSCodeMarker=$true}",
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "label": "Clean build",
            "type": "shell",
            "command": "Invoke-Build Clean",
            "problemMatcher": []
        }
    ]
}